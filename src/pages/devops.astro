---
import Header from '../components/Header.astro';
import Project from "../components/Project.astro";
import Sidebar from "../components/Sidebar.astro";
const projects = [
  {
    title: "SQL",
    desc: [
      "Elaboración de consultas SQL para manipulación y gestión de datos",
      "Uso de sentencias SELECT, INSERT, UPDATE y DELETE en bases de datos relacionales",
      "Aplicación de JOIN, GROUP BY, HAVING y subconsultas para análisis de información",
      "Creación de vistas y procedimientos almacenados para optimizar procesos",
    ],
    tech: ["SQL", "Oracle", "SQL Developer"],
    link: "https://github.com/tef333/DB2"
  },
  {
    title: "PL/SQL Scripts",
    desc: [
      "Built an infrastructure for a data analytics platform",
      "Configured VMs and deployed a multi-node Kubernetes cluster on AWS",
      "Designed to handle a high volume of ~5 million data points per day",
      "Integrated Grafana and Prometheus for monitoring",
    ],
    tech: ["Docker", "Kubernetes", "AWS", "Node.js", "RabbitMQ"]
  },
  {
    title: "NoSQL",
    desc: [
      "Migrated a cloud-based CRM system from one provider to another",
      "Built the new GCP infrastructure using Terraform as a IaC tool",
      "Deployed logging and monitoring tools in GKE cluster",
    ],
    tech: ["GCP", "Terraform", "Kubernetes", "GitLab"]
  },
    {
    title: "Proyecto",
    desc: [
      "Migrated a cloud-based CRM system from one provider to another",
      "Built the new GCP infrastructure using Terraform as a IaC tool",
      "Deployed logging and monitoring tools in GKE cluster",
    ],
    tech: ["GCP", "Terraform", "Kubernetes", "GitLab"]
  }
];
---

<!DOCTYPE html>
<html
>
  <Header title="Evidencias | Estefania Paredes C" />
  <body>
    <div class="content">
        <Sidebar selectedItem="devops" />
      <nav class="main">
        <div class="container">
          <div class="back-nav-container">
            <a href="/" class="back-nav-button w-inline-block"
              ><img src="/assets/back.svg" loading="lazy" alt="" class="back-nav-img" />
              <div>Back</div></a
            >
          </div>
          <div class="content-container">
            <h1>Evidencias</h1>
            <section class="items-container">
                <div class="resouce-items">
                    {projects.map(project => (
                      <Project 
                        title={project.title} 
                        desc={project.desc}
                        tech={project.tech}
                        link={project.link}
                      />
                    ))}
                  </div>
            </section>
          </div>
        </div>
      </nav>
    </div>

    <!--[if lte IE 9]><script src="//cdnjs.cloudflare.com/ajax/libs/placeholders/3.0.2/placeholders.min.js"></script><![endif]-->
  </body>
</html>
